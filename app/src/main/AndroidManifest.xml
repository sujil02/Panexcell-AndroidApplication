<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.panexcell">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appdrawerlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".UserAreaActivityTemp" />
        <activity
            android:name=".UserAreaActivity"
            android:label="@string/title_activity_user_area2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DescriptionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="locale|orientation" />
        <activity android:name=".SpecificProgramActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".AboutUs" />
        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>