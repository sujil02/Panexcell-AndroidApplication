<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_register"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.panexcell.RegisterActivity"
android:background="@color/appColor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btRegister"
        android:paddingBottom="@dimen/padding_between_elements" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:inputType="textPersonName"
                    android:id="@+id/etName"
                    android:hint="Name"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:background="@android:color/background_light"
                    android:paddingTop="@dimen/padding_between_elements"
                    android:paddingBottom="@dimen/padding_between_elements"
                    android:layout_span="2"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etMiddleName"
                    android:hint="Middle Name"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:layout_span="2"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:inputType="textPersonName"
                    android:id="@+id/etSurname"
                    android:hint="Surname"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:background="@android:color/background_light"
                    android:layout_span="2"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/etDOB"
                    android:hint="Date Of Birth"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:background="@android:color/background_light"
                    android:elevation="2dp" />

                <Button
                    android:text="Select"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:id="@+id/btDatePicker"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_gravity="bottom" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1.0">
                <Spinner
                    android:layout_height="wrap_content"
                    android:id="@+id/spIDType"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:spinnerMode="dialog"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1.0">

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etIDNumber"
                    android:hint="ID Number"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:background="@android:color/background_light"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1.0">
                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:id="@+id/etPhoneNumber"
                    android:hint="Phone Number"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:background="@android:color/background_light"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/etPhoneNumber2"
                    android:hint="Alternate Phone Number"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:background="@android:color/background_light"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <EditText
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:inputType="textPersonName"
                    android:id="@+id/etCity"
                    android:hint="Please Enter Your City"
                    android:padding="@dimen/EditText_Internal_Padding"
                    android:layout_marginTop="@dimen/padding_between_elements"
                    android:background="@android:color/background_light"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1.0">
                <TextView
                    android:text="Gender"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:id="@+id/tvGender"
                    android:paddingTop="20dp"
                    android:layout_below="@+id/etPhoneNumber"
                    android:textSize="20sp"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/radioSex"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@+id/tvGender"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="0dp"
                    android:layout_weight="0.75">

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPhoneNumber"
                        android:text="Female"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:layout_weight="0.45" />

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etPhoneNumber"
                        android:text="Male"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:layout_weight="0.3" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1.0"
                android:padding="25dp">

                <Button
                    android:text="Register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btRegister"
                    android:background="#E1EAEF"
                    android:textColor="#28ADAC"
                    android:textSize="18sp"
                    android:shadowRadius="15"
                    android:layout_weight="0.9"
                    android:layout_span="2"/>
            </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>
