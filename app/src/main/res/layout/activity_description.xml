<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panexcell.DescriptionActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/photoscreen_withoutname"
        android:id="@+id/imageView2"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvThankYou"
        android:text="@string/ThankYou"
        android:textSize="36sp"
        android:padding="@dimen/padding_between_elements"
        android:textAlignment="center"
        android:textColor="@color/appColor"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_margin="@dimen/padding_between_elements" />

    <TextView
        android:text="@string/Redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRedirect"
        android:textSize="20sp"
        android:padding="@dimen/padding_between_elements"
        android:textAlignment="center"
        android:textColor="#f44e42"
        android:layout_below="@+id/tvThankYou"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/padding_between_elements" />

</RelativeLayout>
