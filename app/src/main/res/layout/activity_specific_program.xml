<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_specific_program"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panexcell.SpecificProgramActivity">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/photoscreen_withoutname"
        android:id="@+id/imageView2"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/scrollView2">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_below="@+id/imageView2"
            android:padding="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/StudyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStudyNo"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStudyNo1"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/appColor"/>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/BloodLoss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBloodLoss"
                    android:layout_gravity="left"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBloodLoss1"
                android:padding="@dimen/SpecificScreen_psdding"
                android:textSize="@dimen/SpecificScreen_textSize"
                android:textColor="@color/SpecificUserAreaHostFontColor"/>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/Payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPayment"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPayment1"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaHostFontColor"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/No.ofperiods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPeriods"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPeriods1"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaHostFontColor"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/Stay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStay"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStay1"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaHostFontColor"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/AmulatorySamples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAS"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                    android:text="AS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAS1"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaHostFontColor"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left">

                <TextView
                    android:text="@string/Study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStudy"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaUiFontColor"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStudy1"
                    android:padding="@dimen/SpecificScreen_psdding"
                    android:textSize="@dimen/SpecificScreen_textSize"
                    android:textColor="@color/SpecificUserAreaHostFontColor"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="15dp">
                <Button
                    android:text="Interested"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btApply"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    android:background="@drawable/round_corner_buttons"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TextView
        android:text="Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="33dp"
        android:id="@+id/tvHeader"
        android:textColor="@color/white"
        android:textSize="25dp"/>


</RelativeLayout>
