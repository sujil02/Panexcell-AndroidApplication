<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:padding="20dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/tvTitle"
            android:textSize="22sp"
            android:textColor="#242424" />

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRightArrow"
            android:drawableLeft="@drawable/arrowicon2525"
            android:textSize="32dp"
            android:textColor="@color/SpecificUserAreaUiFontColor"
            android:layout_marginRight="46dp"
            android:layout_marginEnd="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp" />

    <TextView
        android:text="@string/Rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvCompensation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/tvRs"
        android:textSize="20sp"
        android:textColor="@color/appColor"/>

    <TextView
        android:text="Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCompensation"
        android:textSize="20sp"
        android:textColor="@color/appColor"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/tvRs"
        android:layout_toEndOf="@+id/tvRs"/>

</RelativeLayout>